# Docker Compose Environment Variables
# Copy this to .env in the project root and modify as needed

# PostgreSQL Configuration
POSTGRES_DB=codesyncpad
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# Backend Configuration
NODE_ENV=production
PORT=3000
DATABASE_URL=postgresql://postgres:your_secure_password_here@postgres:5432/codesyncpad
CLIENT_URL=http://localhost

# Session Configuration
SESSION_TTL_HOURS=24
MAX_ACTIVE_USERS=50

# Execution Configuration
EXECUTION_TIMEOUT_MS=5000
EXECUTION_MEMORY_LIMIT_MB=128

# Frontend Port (Nginx)
FRONTEND_PORT=80

# Backend Port (exposed for direct access if needed)
BACKEND_PORT=3000

# PostgreSQL Port (exposed for direct access if needed)
POSTGRES_PORT=5432
